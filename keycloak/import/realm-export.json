{
  "realm": "idabus",
  "enabled": true,
  "displayName": "Idabus Local Realm",
  "roles": {
    "realm": [
      {
        "name": "user",
        "description": "Standard application user"
      },
      {
        "name": "admin",
        "description": "Application administrator"
      }
    ]
  },
  "clients": [
    {
      "clientId": "idabus-app",
      "name": "Idabus App",
      "enabled": true,
      "publicClient": true,
      "protocol": "openid-connect",
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": false,
      "redirectUris": [
        "http://localhost:8080/*",
        "http://localhost:8090/*",
        "http://localhost:4200/*"
      ],
      "webOrigins": [
        "http://localhost:8080",
        "http://localhost:8090",
        "http://localhost:4200"
      ],
      "attributes": {
        "pkce.code.challenge.method": "S256"
      }
    }
  ],
  "users": [
    {
      "username": "portal.user",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Portal",
      "lastName": "User",
      "email": "portal.user@example.local",
      "credentials": [
        {
          "type": "password",
          "value": "Keycloak_Password_123!",
          "temporary": false
        }
      ],
      "realmRoles": ["user"]
    },
    {
      "username": "portal.admin",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Portal",
      "lastName": "Admin",
      "email": "portal.admin@example.local",
      "credentials": [
        {
          "type": "password",
          "value": "Keycloak_Password_123!",
          "temporary": false
        }
      ],
      "realmRoles": ["user", "admin"]
    }
  ]
}
